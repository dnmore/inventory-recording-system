<html lang="en">
  <head>
    <%- include('includes/head', { title: 'Add new item' }) %>
    <link rel="stylesheet" href="/styles/form.css" />
    <script src="/scripts/validateForm.js" defer></script>
  </head>

  <body>
    <%- include('includes/navigation') %>
    <div class="heading">
      <h3>Add a New Item</h3>
    </div>
    <div class="form__container">
      <form action="/items" onsubmit="return validateItem()" method="post">
        <div class="form__item">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" />
          <span class="error" id="name__error"></span>
        </div>


        <div class="form__item">
          <label for="description">Description</label>
          <textarea
            id="description"
            name="description"
            ></textarea>
          <span class="error" id="description__error"></span>
        </div>


        <div class="form__item">
          <label for="cost">Cost(â‚¬)</label>
          <input type="number" step="0.01" id="cost" name="cost"/>
          <span class="error" id="cost__error"></span>
        </div>

        <div class="form__item">
          <label for="quantity">Quantity</label>
          <input type="number" id="quantity" name="quantity" />
          <span class="error" id="quantity__error"></span>
        </div>

        <div class="form__item">
          <label for="category">Select Category</label>
          <select id="category" name="category">
            <% for (const category of categories) { %>
            <option value="<%= category.id %>"><%= category.title %></option>
            <% } %>
          </select>
        </div>
        <button class="action">Add Item</button>
      </form>
    </div>
  </body>
</html>
