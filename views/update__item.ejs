<html lang="en">
  <head>
    <%- include('includes/head', { title: 'Update item' }) %>
  </head>

  <body>
    <%- include('includes/navigation') %>
    <div class="heading">
      <h3>Update Item</h3>
    </div>

    <div class="form__container">
      <form action="/items/<%= item.id %>/edit" method="post">
        
        <div class="form__item">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            value="<%= item.name %>"
            required
          />
        </div>
        <div class="form__item">
          <label for="description">Description</label>
          <textarea id="description" name="description" required maxlength="255">
<%= item.description %></textarea
          >
        </div>
        <div class="form__item">
          <label for="cost">Cost(â‚¬)</label>
          <input
            type="number"
            step="0.01"
            id="cost"
            name="cost"
            value="<%= item.cost %>"
            required
          />
        </div>
        <div class="form__item">
          <label for="quantity">Quantity</label>
          <input
            type="number"
            id="quantity"
            name="quantity"
            value="<%= item.quantity %>"
            required
          />
        </div>
        <div class="form__item">
          <label for="category">Select Category</label>
          <select id="category" name="category">
            <% for (const category of categories) { %>
            <option value="<%= category.id %>"><%= category.title %></option>
            <% } %>
          </select>
        </div>

        <button class="action">Update</button>
      </form>
    </div>
  </body>
</html>
